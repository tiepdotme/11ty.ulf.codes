<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">
  <title>{{ site.name }}</title>
  <subtitle></subtitle>
  <link href="{{ site.url }}{{ site.rss }}" rel="self"/>
  <link href="{{ site.url }}/"/>
  {%- if collections.liveSiteTagContent | length -%}
    <updated>{{ collections.liveSiteTagContent | rssLastUpdatedDate }}</updated>
  {%- endif -%}
  <id>{{ site.url }}</id>
  <author>
    <name>{{ site.author.name }}</name>
    <email>{{ site.author.email }}</email>
  </author>
  {%- for post in collections.liveSiteTagContent -%}
    {%- if post.data.norss == nil -%}
    {%- set absolutePostUrl -%}{{ site.url }}{{ post.url | url }}{%- endset -%}
    <entry>
      <title>{{ post.data.title }}</title>
      <link href="{{ absolutePostUrl }}"/>
      <updated>{{ post.date | rssDate }}</updated>
      <id>{{ absolutePostUrl }}</id>
      <content type="html">
        <![CDATA[
      {{ post.templateContent | safe }}
    ]]>
      </content>
    </entry>
    {%- endif -%}
  {%- endfor %}
</feed>